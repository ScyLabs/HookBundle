{% extends '@WebProfiler/Profiler/layout.html.twig' %}

{% block toolbar %}
    {% set icon %}
        {{ include('@Hook/data_collector/hook_collector_icon.svg') }}
        <span class="sf-toolbar-value">{{  collector.count }} Hook{{ (collector.count > 1) ? 's' }} - {{ collector.countLinks }} Link{{ (collector.countLinks > 1) ? 's' }}</span>
    {% endset %}

    {% set text %}
        {% for key,hook in collector.hooks|keys  %}

            <div class="sf-toolbar-info-piece">
                <b>{{ hook }}</b>
                <span>{{ collector.hooks[hook].template }}</span>
            </div>

        {% endfor %}


    {% endset %}

    {{ include('@WebProfiler/Profiler/toolbar_item.html.twig', { 'link': true }) }}
{% endblock %}

{% block head %}
    {{ parent() }}
    {# Optional. Here you can link to or define your own CSS and JS contents. #}
    {# Use {{ parent() }} to extend the default styles instead of overriding them. #}
{% endblock %}

{% block menu %}
    {# This left-hand menu appears when using the full-screen profiler. #}
    <span class="label">
        <span class="icon">{{ include('@Hook/data_collector/hook_collector_icon.svg') }}</span>
        <strong>Hooks</strong>
    </span>
{% endblock %}

{% block panel %}
    {# Optional, for showing the most details. #}
    <h2>List of hooks in this page</h2>
    <table>
        <tr>
            <th>HookName</th>
            <th>Emplacement</th>
            <th>Links</th>
        </tr>

        {% for key,hook in collector.hooks|keys  %}
            <tr>
                <td>{{ hook }}</td>
                <td>{{ collector.hooks[hook].template }}</td>
                <td>
                    <ul>
                        {% for link in collector.hooks[hook].links %}
                            <li>{{ link }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        {% endfor %}

    </table>

{% endblock %}